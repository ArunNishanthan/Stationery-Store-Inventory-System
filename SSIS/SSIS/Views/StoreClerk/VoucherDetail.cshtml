@model SSIS.Models.AdjustmentVoucher
@{
    ViewBag.Title = "VoucherDetail";
}


<div class="modal-header text-center">
    <h2 align="center">Voucher Detail</h2>
</div>

<div class="container">
    <table id="tableReq" class="table table-bordered table-head-bg-info table-bordered-bd-info mt-4">
        <thead>
            <tr>
                <th>Item Description</th>
                <th>Quantity Adjustment</th>
                <th>Date</th>
                <th>Reason</th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Vouchers.Count(); i++)
            {
                <tr>
                    <td>@Model.Vouchers[i].Item.Description</td>
                    <td>@Model.Vouchers[i].Quantity</td>
                    <td>@Model.Vouchers[i].CreatedDate.ToShortDateString()</td>
                    <td>@Model.Vouchers[i].Comment</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>
