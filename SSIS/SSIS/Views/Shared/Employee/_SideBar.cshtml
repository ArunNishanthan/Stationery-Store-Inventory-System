@using SSIS.Enums
@using SSIS.Models
@{
    User user = (User)Session["usersession"];
}<div class="sidebar sidebar-style-2">
    <div class="sidebar-wrapper scrollbar scrollbar-inner">
        <div class="sidebar-content">
            <ul class="nav nav-primary">
                @if (user.Role == Role.DEPT_ACT_HEAD || user.Role == Role.DEPT_REP || user.Role == Role.DEPT_HEAD)
                {
                    <li class="nav-item active">
                        <a href="/Employee/Dashboard">
                            <i class="fas fa-home"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                }
                <li class="nav-item active">
                    <a data-toggle="collapse" href="#submenu">
                        <i class="fab fa-searchengin"></i>
                        <p>Requisition</p>
                        <span class="caret"></span>
                    </a>
                    <div class="collapse" id="submenu">
                        <ul class="nav nav-collapse">

                            <li>
                                <a href="/Employee/RequestForm">
                                    <span class="sub-item">Request Form</span>
                                </a>
                            </li>
                            @if (user.Role == Role.DEPT_HEAD || user.Role == Role.DEPT_ACT_HEAD)
                            {
                                <li>
                                    <a href="/Employee/ApprovalRequestList">
                                        <span class="sub-item">Pending Approvals</span>
                                    </a>
                                </li>
                            }
                            @if (user.Role == Role.DEPT_REP || user.Role == Role.EMPLOYEE)
                            {
                                <li>
                                    <a href="/Employee/pendingRequestList">
                                        <span class="sub-item">Pending Requests</span>
                                    </a>
                                </li>
                            }

                            <li>
                                <a href="/Employee/viewPreviousReqForm">
                                    <span class="sub-item">Requisition History</span>
                                </a>
                            </li>

                            <li>
                                <a href="/Employee/ViewCatalogue">
                                    <span class="sub-item">View Catalogue</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>

                @if (user.Role == Role.DEPT_ACT_HEAD || user.Role == Role.DEPT_REP || user.Role == Role.DEPT_HEAD)
                {
                    <li class="nav-item active">
                        <a data-toggle="collapse" href="#submenu1">
                            <i class="fas fa-shopping-bag"></i>
                            <p>Disbursement</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse" id="submenu1">
                            <ul class="nav nav-collapse">
                                <li>
                                    <a href="/Employee/GetDepDisbursementListByDepartment">
                                        <span class="sub-item">Disbursement List</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/Employee/GetDepDisbursementHistoryByDepartment">
                                        <span class="sub-item">Disbursement History</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>
                }
                @if (user.Role == Role.DEPT_HEAD)
                {
                    <li class="nav-item active">
                        <a data-toggle="collapse" href="#submenu2">
                            <i class="fas fa-users-cog"></i>
                            <p>Delegation</p>
                            <span class="caret"></span>
                        </a>
                        <div class="collapse" id="submenu2">
                            <ul class="nav nav-collapse">
                                <li>
                                    <a href="/DeptHead/DelegateAuthorityForm">
                                        <span class="sub-item">Delegate Authority</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/DeptHead/getdelegationhistory">
                                        <span class="sub-item">Delegation History</span>
                                    </a>
                                </li>
                                <li>
                                    <a href="/DeptHead/assignDeptRepform">
                                        <span class="sub-item">Assign Representative</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </li>

                }
            </ul>
        </div>
    </div>
</div>
